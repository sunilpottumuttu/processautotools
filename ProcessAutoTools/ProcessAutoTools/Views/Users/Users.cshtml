@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    //ViewBag.Title = "Users";
    
}

<div class="login-card">
    <h1>Log-in</h1>
    <br>
    <form id="frmLogin" name="frmLogin" method="post">
        <input type="text" name="txtUserName" id="txtUserName" placeholder="Username" value="@ViewData["UserName"].ToString()">
        <input type="password" name="txtPassword" id="txtPassword" placeholder="Password" value="@ViewData["PassWord"].ToString()">
        <input type="button" id="btnLogin" name="btnLogin" class="login login-submit" value="login">
        <span id="spnMessage" name ="spnMessage">@ViewData["Message"].ToString()</span>
    </form>

    <div class="login-help">
        <a href="#">Register</a> • <a href="#">Forgot Password</a>
    </div>
</div>

<script type="text/javascript">
    $('#btnLogin').click(function ()
    {
        //$("form[name='frmLogin']").setAttrib("action", "ProcessAutoTools/Users/Validate");
        //$("form[name='frmLogin']").submit();
        $("#frmLogin").attr("action", "Users/Validate");
        $("#frmLogin").submit();
    });
    
</script>